{
  "plansDirectory": "./docs/plans",
  "language": "russian",
  "showTurnDuration": true,
  "spinnerTipsEnabled": true,
  "env": {
    "ENABLE_TOOL_SEARCH": "auto:5",
    "BASH_DEFAULT_TIMEOUT_MS": "120000"
  },
  "permissions": {
    "allow": [
      "Bash(dotnet *)",
      "Bash(pwsh *)",
      "Bash(buf *)",
      "Bash(git status)",
      "Bash(git status *)",
      "Bash(git diff)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git fetch *)",
      "Bash(git remote *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git tag *)",
      "Bash(git stash *)",
      "Bash(git show *)",
      "Bash(git rev-parse *)",
      "Bash(git describe *)",
      "Bash(git -C *)",
      "Bash(npm *)",
      "Bash(pnpm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(gh *)",
      "Bash(docker ps *)",
      "Bash(docker logs *)",
      "Bash(docker compose *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(which *)",
      "Bash(echo *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(curl *)",
      "Bash(md5 *)",
      "Bash(python3 *)",
      "Bash(xargs *)",
      "Bash(git pull *)",
      "Bash(git mv *)",
      "WebSearch",
      "mcp__filesystem__list_directory",
      "mcp__filesystem__read_multiple_files",
      "mcp__filesystem__read_text_file",
      "mcp__filesystem__directory_tree",
      "mcp__filesystem__list_allowed_directories",
      "mcp__filesystem__search_files",
      "mcp__filesystem__create_directory",
      "mcp__filesystem__edit_file",
      "mcp__filesystem__write_file",
      "mcp__github__get_issue",
      "mcp__github__list_issues",
      "mcp__github__create_issue",
      "mcp__github__get_file_contents",
      "mcp__github__list_commits",
      "mcp__github__search_issues",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git reset *)",
      "Bash(git checkout *)",
      "Bash(git rebase *)",
      "Bash(git merge *)",
      "Bash(rm -rf *)",
      "Bash(docker rm *)",
      "Bash(docker rmi *)"
    ],
    "deny": [
      "Read(**/.env.local)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)"
    ],
    "additionalDirectories": [
      "../../libraries/DKH.Architecture",
      "../../DKH.Infrastructure",
      "../../libraries/DKH.Platform"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if [ $exit_code -ne 0 ]; then echo '⚠️ Command failed with exit code: '$exit_code; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "csharp-lsp@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true
  }
}
